<!DOCTYPE html>
<html lang="en" class="has-background-grey-lighter">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChartApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
    <script src="https://kit.fontawesome.com/4260401957.js" crossorigin="anonymous"></script>
</head>

<body class="has-background-grey-lighter">
    <section class="section">
        <div class="columns">
            <div class="column is-half is-offset-one-quarter has-text-centered">
                <form action="/plot" method="get">
                    <div class="field">
                        <label class="label">Select plot</label>
                        <div class="control">
                            <div class="select">
                                <select name="plot" id="plotSelect">
                                    <option value="">Type</option>
                                    <option value="line">Line plot</option>
                                    <option value="scater">Scater plot</option>
                                    <option value="bar">Bar plot</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="field " id="tableSelectField">
                        <label for = "tableSelect" class="label">Select one or multiple tables</label>
                        <div class="block " id = "addTableContainer">
                            <button type = "button" id= "addButtonTables" class="button is-primary is-light is-rounded"><span class="icon"><i class="fas fa-plus"></i></span>
                            </button>
                        </div>
                        <div class="control" id ="copythis">
                            <div class="select">
                                <select name="table" id="tableSelect">
                                    <option>Select table</option>
                                </select>
                            </div>
                        </div>   
                    </div>

                    <div class="field" id="countryMultiSelectField">
                        <label class="label">Select one or multiple countries</label>
                        <div class="block" id = "addCountryContainer">
                            <button type = "button" id= "addButtonCountry" class="button is-primary is-light is-rounded"><span class="icon"><i class="fas fa-plus"></i></span>
                            </button>
                        </div>
                        <div class="control" id ="copythisCountry">
                            <div class="select">
                                <select name="country" id="countryMultiSelect">
                                    <option>Select country</option>
                                </select>
                            </div>
                        </div>
                        
                    </div>
                    <div class="field">
                        <div class="control" id = "slider">
                            <label for="min">Min Year:</label>
                            <input id = 'min'type="number" min="1800" max="2100" step="1" value="1921" name = "minYear" />
                            <label for="max">Max Year:</label>
                            <input id = 'max'type="number" min="1800" max="2100" step="1" value="2021" name = "maxYear" />
                        </div>
                    </div>
                    <div class="field">
                        <div class="control"> <div class="select">
                            <select name="groupBy" id="groupby">
                                <option value = "all">All years</option>
                                <option value = "dekaetia">Group by decade</option>
                                <option value = "pentaetia">Group by five years</option>
                            </select>
                        </div></div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <button class="button is-link">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <script src="https://unpkg.com/axios/dist/axios.min.js">
    </script>
    <script src="https://d3js.org/d3.v4.js"></script>
    <script src="app.js"></script>
</body>

</html>